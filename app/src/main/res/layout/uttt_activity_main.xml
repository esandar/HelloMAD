<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context=".UTTT.UTTTMainActivity">

    <chenliu.madcourse.neu.edu.numad18s_chenliu.UTTT.ScrollingView
        android:id="@+id/main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scrollingDrawable="@drawable/uttt_xando_background" />

    <fragment
        android:id="@+id/main_fragment"
        class="chenliu.madcourse.neu.edu.numad18s_chenliu.UTTT.UTTTMainFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:layout="@layout/uttt_fragment_main"/>
</FrameLayout>
