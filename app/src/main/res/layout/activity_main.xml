<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_version"
        android:layout_width="181dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:text="Version Name: Unknown\nVersion Code: Unknown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_about"
        android:layout_width="73dp"
        android:layout_height="38dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="1dp"
        android:onClick="openAbout"
        android:text="About"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_error"
        android:layout_width="98dp"
        android:layout_height="57dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="5dp"
        android:onClick="generateError"
        android:text="Generate Error"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bt_dict"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="test_dictionary"
        android:text="Dictionary"
        app:layout_constraintTop_toBottomOf="@+id/bt_about"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>